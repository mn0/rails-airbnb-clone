<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,310,68,0.3) 0%, rgba(0,40,51,0.5) 50%), url(<%= image_path 'storage.jpg' %>);">
  <div class="banner-content">
    <h1>PAck your shit</h1>
    <p>Store your stuff or turn apartment space into income</p>
    <%= form_tag storage_spaces_path, method: :get, class: 'form-inline' do %>
      <div class="input-group">
        <input type="text" name="location" placeholder="London" class="form-control"style="width: 100px; margin-right: 5px">
        <input type="text" name="size" placeholder="20" class="form-control" style="width: 100px">
        <div class="input-group-addon">sq. meters</div>
      </div>
      <button class="btn btn-primary">Find storage space</button>
    <% end %>
  </div>
</div>


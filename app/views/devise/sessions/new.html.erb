<div class="wrapper" style="background-image: linear-gradient(-225deg, rgba(0,301,068,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= image_path 'giphy.gif' %>); background-repeat: no-repeat; background-size: cover;background-position: center">
  <div class="container">
    <div class="row">
      <div class="col-xs-6">
        <h2>Log in</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true %>
            <%= f.input :password, required: false %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
